@model string[]
@{
	Layout = "_Layout";
}

@section Header{
	<div class="bg-success">
		@foreach(string str in new []{"Home", "List", "Edit" })
		{
			<a class="btn btn-sm btn-primary" asp-action="str">@str</a>
		}
	</div>
}

@section Body{
	This is a list of fruit names:
	@foreach (string s in Model)
	{
		<span><b>@s</b></span>
	}
}


@section Footer{
	<div class="bg-success">
		This is the footer
	</div>
}