@model City
@{
	ViewData["Title"] = "Create City";
	Layout = "_Layout";
}

<form method="post" action="Create">
	<div class="mb-3">
		<label asp-for="Name">Name:</label>
		<input class="form-control" asp-for="Name" />
	</div>
	<div class="mb-3">
		<label asp-for="Country">Country:</label>
		<input class="form-control" asp-for="Country" />
	</div>
	<div class="mb-3">
		<label asp-for="Population">Population:</label>
		<input class="form-control" asp-for="Population" />
	</div>
	<div class="mb-3">
		<button type="submit" class="btn btn-primary">Create</button>
		<a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
	</div>
</form>